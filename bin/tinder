#!/usr/bin/env python3
# This file is placed in the Public Domain.


"objects"


import os
import shutil
import sys
import time


sys.path.insert(0, os.getcwd())


from objz.command import Commands, Config, Mods, command, parse, scanner
from objz.methods import fmt, ident
from objz.objects import Object
from objz.persist import Workdir, find, fntime, getpath, read, skel, types, write


examples = {
    "cmd": [""],
    "dne": ["", "test2"],
    "log": ["", "test"],
    "fnd": ["", "log"],
    "tdo": ["", "test2"]
}


Mods.dir("mods", "mods")
Workdir.wdr = ".test"


PATH = ".test"


class Event:

    def __init__(self):
        self.ctime = time.time()
        self.result = {}
        self.type = "event"

    def display(self):
        for tme in sorted(self.result):
            self.dosay(
                       self.result[tme]
                      )

    def dosay(self, txt):
        print(txt)

    def reply(self, txt):
        self.result[time.time()] = txt



class Log:
 
    pass


class Todo:

    pass




def main():
    parse(Config, " ".join(sys.argv[1:])
    nr = Config.index or 100
    if os.path.exists(PATH):
        shutil.rmtree(PATH)
    scanner()
    for _x in range(nr):
        for cmd, example in examples.items():
            for ex in example:
                evt = Event()
                evt.txt = f"{cmd} {ex}"
                command(evt)


if __name__ == "__main__":
    main()
    